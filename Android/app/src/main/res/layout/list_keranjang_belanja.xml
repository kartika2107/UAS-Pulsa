<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_produk"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/image_axis"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nohp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/image_delete"
            app:layout_constraintStart_toEndOf="@+id/image_produk"
            app:layout_constraintTop_toTopOf="@+id/image_produk"
            tools:text="087885804933" />

        <TextView
            android:id="@+id/tv_nama_produk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:fontFamily="monospace"
            app:layout_constraintEnd_toEndOf="@+id/tv_nohp"
            app:layout_constraintStart_toStartOf="@+id/tv_nohp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nohp"
            tools:text="Axis 5.000" />

        <TextView
            android:id="@+id/tv_harga_produk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            app:fontFamily="monospace"
            app:layout_constraintEnd_toEndOf="@+id/tv_nama_produk"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_nama_produk"
            app:layout_constraintTop_toBottomOf="@+id/tv_nama_produk"
            tools:text="Rp. 7.000" />

        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_delete" />

        <Button
            android:id="@+id/btn_bayar"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            android:text="Bayar"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="@+id/tv_harga_produk"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/tv_harga_produk"
            app:layout_constraintTop_toBottomOf="@+id/tv_harga_produk" />


    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>